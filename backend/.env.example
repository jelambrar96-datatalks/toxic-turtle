# Server
DEBUG=True
API_TITLE=Toxic Turtle API
API_VERSION=0.1.0

# Database
DATABASE_URL=sqlite+aiosqlite:///./test.db
# For PostgreSQL: DATABASE_URL=postgresql+asyncpg://user:password@localhost/dbname

# JWT
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# OAuth - Google
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret

# OAuth - Facebook
FACEBOOK_OAUTH_CLIENT_ID=your_facebook_app_id
FACEBOOK_OAUTH_CLIENT_SECRET=your_facebook_app_secret

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000
